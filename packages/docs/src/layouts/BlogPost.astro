---
import type { CollectionEntry } from "astro:content";
import { TOC, Typography } from "@cn-ui/core";
import type { MarkdownLayoutProps } from "astro";
import BaseHead from "../components/BaseHead.astro";
import { Header } from "../components/Header";
type Props = MarkdownLayoutProps<CollectionEntry<"blog">["data"]>;

const { title, description, pubDate, updatedDate, heroImag, headings } = Astro.props;
---

<html lang="en">
    <head>
        <BaseHead title={title} description={description} />
    </head>

    <body>
        <Header client:load />
        <Typography class="pr-52">
            <slot />
        </Typography>
        <TOC headings={headings} class="fixed top-20 right-2 w-48 border-l-2 pl-2 border-design-border" />
    </body>
</html>
