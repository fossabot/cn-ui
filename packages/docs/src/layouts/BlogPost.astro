---
import type { CollectionEntry } from 'astro:content'
import BaseHead from '../components/BaseHead.astro'
import { Header } from '../components/Header'
import { Typography, TOC } from '@cn-ui/core'
import type { MarkdownLayoutProps } from 'astro'
type Props = MarkdownLayoutProps<CollectionEntry<'blog'>['data']>

const { title, description, pubDate, updatedDate, heroImag, headings } = Astro.props
---

<html lang="en">
    <head>
        <BaseHead title={title} description={description} />
    </head>

    <body>
        <Header client:load />
        <Typography class="pr-52">
            <slot />
        </Typography>
        <TOC headings={headings} class="fixed top-20 right-2 w-48 border-l-2 pl-2 border-design-border" />
    </body>
</html>
